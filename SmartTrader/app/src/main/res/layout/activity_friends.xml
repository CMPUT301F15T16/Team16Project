<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.loveboyuan.smarttrader.FriendsActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addB"
        android:layout_above="@+id/searchInventoryButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addB"
        android:text="Add"
        android:onClick="addFriend"
        android:layout_below="@+id/friendsActionBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/friendListView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends Inventory"
        android:id="@+id/searchInventoryButton"
        android:onClick="searchInventory"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/addB"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:id="@+id/friendsActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
