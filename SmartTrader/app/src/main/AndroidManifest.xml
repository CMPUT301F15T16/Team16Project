<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loveboyuan.smarttrader" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TradeHistoryActivity"
            android:label="@string/title_activity_trade_history" >
        </activity>
        <activity
            android:name=".TradeActivity"
            android:label="@string/title_activity_trade" >
        </activity>
        <activity
            android:name=".InventoryActivity"
            android:label="@string/title_activity_inventory" >
        </activity>
        <activity
            android:name=".ItemActivity"
            android:label="@string/title_activity_item" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".FriendsActivity"
            android:label="@string/title_activity_friends" >
        </activity>
        <activity
            android:name=".PendingActivity"
            android:label="@string/title_activity_pending" >
        </activity>
        <activity
            android:name=".UserSettingsActivity"
            android:label="@string/title_activity_usersettings" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".FriendSearchActivity"
            android:label="@string/title_activity_friend_search" >
        </activity>
        <activity
            android:name=".SearchInventoryActivity"
            android:label="@string/title_activity_search_inventory" >
        </activity>
        <activity
            android:name=".ImageViewActivity"
            android:label="@string/title_activity_image_view" >
        </activity>
        <activity
            android:name=".SelectInventoryItemActivity"
            android:label="@string/title_activity_select_inventory_item" >
        </activity>
        <activity
            android:name=".CurrentTradeActivity"
            android:label="@string/title_activity_current_trade" >
        </activity>
    </application>

</manifest>
