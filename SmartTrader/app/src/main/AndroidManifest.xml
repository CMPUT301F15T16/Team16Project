<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loveboyuan.smarttrader" >


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TradeHistoryActivity"
            android:label="@string/title_activity_trade_history" >
        </activity>
        <activity
            android:name=".TradeActivity"
            android:label="@string/title_activity_trade" >
        </activity>
        <activity
            android:name=".InventoryActivity"
            android:label="@string/title_activity_inventory" >
        </activity>
        <activity
            android:name=".ItemActivity"
            android:label="@string/title_activity_item" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".FriendsActivity"
            android:label="@string/title_activity_friends" >
        </activity>
        <activity
            android:name=".PendingActivity"
            android:label="@string/title_activity_pending" >
        </activity>
        <activity
            android:name=".UserSettingsActivity"
            android:label="@string/title_activity_usersettings" >
        </activity>
    </application>

</manifest>
