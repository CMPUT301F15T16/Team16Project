<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation = "vertical"
    android:layout_weight="1"
    tools:context="team16project.textbooktrader.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="showMenu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/menu_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="History"
        android:id="@+id/history_button"
        android:layout_below="@+id/friend_button"
        android:layout_alignStart="@+id/friend_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Trades"
        android:id="@+id/trade_button"
        android:layout_below="@+id/history_button"
        android:layout_alignStart="@+id/profile_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Friends"
        android:id="@+id/friend_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Profile"
        android:onClick="openProfile"
        android:id="@+id/profile_button"
        android:layout_below="@+id/trade_button"
        android:layout_alignEnd="@+id/friend_button" />

</LinearLayout>
